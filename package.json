{
  "name": "dev-diaries",
  "description": "A minimalist boilerplate for a Node.js API, built on top of Express and written in TypeScript",
  "version": "1.0.0",
  "license": "MIT",
  "dev-start": "nodemon",
  "build": "npx tsc",
  "scripts": {
    "dev:start": "nodemon",
    "build": "npx tsc --outDir dist",
    "lint:check": "eslint src/**/*.ts --env node",
    "lint:fix": "eslint src/**/*.ts --env node --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- --watch --silent -c jest-unit-config.js",
    "test:unit:log": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch --silent -c jest-integration-config.js",
    "test:integration:log": "npm test -- --watch -c jest-integration-config.js",
    "test:integration:log:nock": "DEBUG=nock.* npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:coverage": "npm test -- --coverage --silent",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.3",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  }
}
